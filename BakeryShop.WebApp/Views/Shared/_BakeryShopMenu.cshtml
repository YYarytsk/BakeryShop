@using Microsoft.EntityFrameworkCore.Metadata.Internal
@using BakeryShop.DataAccess.Entities

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="container pb-4">
    <div class="row pt-4">
        <div class="btn-group" role="group" aria-label="Basic example" id="heading">
            <button type="button" class="btn btn-success">All Items</button>
            @*<button type="button" class="btn btn-success">Cakes</button>
            <button type="button" class="btn btn-success">Wedding Cakes</button>
            <button type="button" class="btn btn-success">Cupcakes</button>
            <button type="button" class="btn btn-success">Pies</button>
            <button type="button" class="btn btn-success">Special Desserts</button>*@
        </div>
    </div>
    <div class="row pt-4">
        @foreach (var item in Model)
        {
            <div class="col-sm-4 pb-4">
                <div class="card box-shadow">
                    <img class="card-img-top" src="@item.ImageUrl" alt="image" style="width: 100%">
                    <div class="card-body">
                        <h4 class="card-title">@item.Name <span class="float-right font-20">$@item.UnitPrice.ToString("##.#")</span></h4>
                        <p class="card-text">@item.Description</p>
                        <p>
                            <span class="float-right font-20">
                                <a href="javascript:void(0)" onclick="AddToCart('@item.Id', '@item.Name', '@item.UnitPrice', 1)" class="btn btn-outline-primary">Add To Cart</a>
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
<div class="toast fade hide" data-autohide="false" id="toastCart">
    <div class="toast-header">
        <strong class="mr-auto text-primary">Notification</strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast">×</button>
    </div>
    <div class="toast-body"></div>
</div>